        <div class="sub-title text-xl text-gray-500 sm:text-3xl pt-1">@AMALTHEA 21</div>
    </div>
</section>


<section class="px-1 lg:px-10 py-4 flex justify-center">
<div class="w-5/6 lg:w-5/6 p-4 lg:p-8 m-1 lg:m-16 text-white border-blue-900 border-2 rounded-lg home-card text-xl">
