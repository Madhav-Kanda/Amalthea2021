<link rel="stylesheet" href="../css/events.css">

<header class="bg-transparent w-full" style="height: 10vh; position: absolute;"></header>

<main class="w-full">
	<section class="hero flex">
		<div class="relative top-1/3 lg:top-36">
			<div class="text-8xl lg:text-9xl text-white">Events</div>
			<div class="sub-title text-2xl lg:text-4xl text-gray-500 pt-1">@AMALTHEA 21</div>
		</div>
		<!-- <div class="collage relative mt-5 mr-8 hidden lg:flex">
			<img src="../images/events_collage.png" alt="events_collage" class="object-contain">
		</div> -->
	</section>

	<section class="h-full text-white my-6">
		<div class="w-full text-4xl text-center my-6">Live Events</div>
		<div class="w-full flex flex-wrap justify-center my-6">
			<% events.live.forEach(elem => { %>
				<div class="card-div w-full lg:w-1/3 px-8 my-8">
					<div class="lvcard rounded-xl shadow-xl flex flex-col items-center overflow-hidden" style="height: 32rem;">
						<img src=<%- elem.image %> alt=<%- elem.name %> class="cont-img rounded-xl">
						
						<div class="card-cont flex flex-col items-center w-full pb-8 rounded-b-xl">
							<div class="card-name text-2xl font-medium"><%- elem.name %></div>
							<div class="card-desc text-md p-8"><%- elem.about %></div>
							<div class="btns flex justify-around w-full mt-4">
								<div class="register px-4 py-2 rounded-xl bg-blue-800"><a href=<%- elem.registration %> target="_blank">Register</a></div>
								<div class="rulebook px-4 py-2 rounded-xl bg-blue-800"><a href=<%- elem.rulebook %> target="_blank">Rulebook</a></div>
							</div>
						</div>
					</div>
				</div>
			<% }) %>
		</div>

		<div class="w-full text-4xl text-center my-6">Upcoming</div>
		<div class="w-full flex flex-wrap justify-center my-6">
			<% events.upcoming.forEach(elem => { %>
				<div class="card-div w-full lg:w-1/3 px-8 my-8">
					<div class="lvcard rounded-xl shadow-xl flex flex-col items-center overflow-hidden" style="height: 32rem;">
						<img src=<%- elem.image %> alt=<%- elem.name %> class="cont-img rounded-xl">
						
						<div class="card-cont flex flex-col items-center w-full pb-8 rounded-b-xl">
							<div class="card-name text-2xl font-medium"><%- elem.name %></div>
							<div class="card-desc text-md p-8"><%- elem.about %></div>
							<div class="btns flex justify-around w-full mt-2">
								<div class="rulebook px-4 py-2 rounded-xl bg-blue-800"><a href=<%- elem.rulebook %> target="_blank">Rulebook</a></div>
							</div>
						</div>
					</div>
				</div>
			<% }) %>
		</div>

		<div class="w-full text-4xl text-center my-6">Past Events</div>
		<div class="w-full flex flex-wrap justify-center my-6">
			<% events.past.forEach(elem => { %>
				<div class="card-div w-full lg:w-1/3 px-8 my-8">
					<div class="lvcard rounded-xl shadow-xl flex flex-col items-center overflow-hidden" style="height: 32rem;">
						<img src=<%- elem.image %> alt=<%- elem.name %> class="cont-img rounded-xl">
						
						<div class="card-cont flex flex-col items-center w-full pb-8 rounded-b-xl">
							<div class="card-name text-2xl font-medium"><%- elem.name %></div>
							<div class="btns flex justify-around w-full mt-4">
								<div class="rulebook px-4 py-2 rounded-xl bg-blue-800"><a href=<%- elem.rulebook %> target="_blank">Rulebook</a></div>
							</div>
						</div>
					</div>
				</div>
			<% }) %>
		</div>
	</section>
</main>

<script type="text/javascript">
	const navlink = document.querySelectorAll(".navbar>ul>li");
	// console.log(navlink);
	navlink[1].style.color = "white"
	navlink[1].style.borderBottom = "2px solid white";
</script>